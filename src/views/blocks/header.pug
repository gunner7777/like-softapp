header.shell-full.section-bgcolor--black
  div.shell
    div.header.flex-block
      div.brand.header--height-inner
        a.brand__link(href="#")
          i.fa.fa-eercast.brand__logo.text-color--blue.text--valign-middle(aria-hidden="true")
          span.brand__title.text-bold.text--valign-middle SOFT
          span.brand__title.text-color--blue.text--valign-middle APP
      nav.nav.header--height-inner
        ul
          li.main-menu__item.menu__item
            a.main-menu__link.main-menu__link--active.text-uppercase HOME
          each val in ["ABOUT", "SERVICES", "BLOG", "CONTACTS"]
            li.main-menu__item.menu__item
              a.main-menu__link.text-uppercase= val